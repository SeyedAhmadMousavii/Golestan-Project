@model Golestan.Models.SectionDetailsViewModel

@{
    ViewBag.Title = "جزئیات کلاس";
}

<div class="login-container">
    <h2>کلاس: @Model.Section.Id - درس: @Model.Section.courses.Title</h2>

    <h3>دانشجوها</h3>
    <table style="width:100%; border-collapse: collapse;">
        <thead>
            <tr>
                <th>کد</th>
                <th>نام</th>
                <th>نمره</th>
                <th>عملیات</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var s in Model.Students)
            {
                <tr style="border-bottom: 1px solid #ccc;">
                    <td>@s.Student.Id</td>
                    <td>@s.Student.User.First_name @s.Student.User.Last_name</td>
                    <td>
                        <form method="post" action="/Teacher/SubmitGrade">
                            <input type="hidden" name="StudentId" value="@s.Student.Id" />
                            <input type="hidden" name="SectionId" value="@Model.Section.Id" />
                            <input type="number" name="Grade" value="@s.Grade" min="0" max="20" step="0.1" required />
                            <button type="submit">ثبت نمره</button>
                        </form>
                    </td>
                    <td>
                        <form method="post" action="/Teacher/RemoveStudent">
                            <input type="hidden" name="StudentId" value="@s.Student.Id" />
                            <input type="hidden" name="SectionId" value="@Model.Section.Id" />
                            <button type="submit" style="background-color: crimson;">حذف</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
