@{
    ViewData["Title"] = "لغو تخصیص استاد از کلاس";
}

<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="utf-8" />
    <title>لغو تخصیص استاد از کلاس</title>
    <style>
        * {
            box-sizing: border-box;
        }

        body {
            margin: 0;
            padding: 0;
            font-family: 'Vazir', Tahoma, sans-serif;
            background: linear-gradient(to left, #3a6073, #16222a);
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            direction: rtl;
        }

        .form-container {
            background-color: #fff;
            padding: 2.5rem;
            border-radius: 20px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
            width: 90%;
            max-width: 400px;
            text-align: center;
        }

            .form-container h2 {
                text-align: center;
                margin-bottom: 1.8rem;
                color: #e74c3c;
            }

        label {
            display: block;
            margin-bottom: 0.4rem;
            color: #333;
            font-weight: bold;
            text-align: right;
        }

        input[type="number"] {
            width: 100%;
            padding: 0.6rem;
            margin-bottom: 1.5rem;
            border: 1px solid #ccc;
            border-radius: 10px;
            font-size: 1rem;
        }

        input:focus {
            outline: none;
            border-color: #e74c3c;
            box-shadow: 0 0 5px rgba(231, 76, 60, 0.5);
        }

        .warning-message {
            color: #e74c3c;
            font-size: 0.9rem;
            margin: 1rem 0;
            padding: 0.8rem;
            background-color: #fdecea;
            border-radius: 10px;
        }

        button {
            width: 100%;
            padding: 0.7rem;
            background-color: #e74c3c;
            border: none;
            color: white;
            font-size: 1rem;
            border-radius: 10px;
            cursor: pointer;
            transition: background-color 0.3s ease;
            font-weight: bold;
        }

            button:hover {
                background-color: #c0392b;
            }

        .btn-back {
            display: inline-block;
            margin-bottom: 1.5rem;
            background-color: #2980b9;
            color: white;
            padding: 0.5rem 1rem;
            border-radius: 10px;
            text-decoration: none;
            font-weight: bold;
            transition: background-color 0.3s ease;
        }

            .btn-back:hover {
                background-color: #1c5980;
            }

        .back-button {
            width: 100%;
            padding: 0.7rem;
            background-color: #2980b9;
            border: none;
            color: white;
            font-size: 1rem;
            border-radius: 10px;
            cursor: pointer;
            transition: background-color 0.3s ease;
            display: inline-block;
            text-align: center;
            text-decoration: none;
        }

        .top-left-button {
            position: absolute;
            top: 20px;
            left: 20px;
            width: auto;
            padding: 0.5rem 1rem;
            font-weight: bold;
        }

    </style>
</head>
<body>
    <a href="@Url.Action("Index", "Admin")" class="back-button top-left-button">← بازگشت</a>

    <div class="form-container">
  
        <form method="post" action="/Admin/RemoveTeacher" onsubmit="return confirm('آیا از لغو تخصیص این استاد از کلاس مطمئن هستید؟ این عمل غیرقابل بازگشت است!');">
            <h2>لغو تخصیص استاد از کلاس</h2>

            <div class="warning-message">
                ❌ توجه: این عمل غیرقابل بازگشت است!
            </div>

            <label for="classId">شناسه کلاس:</label>
            <input type="number" id="classId" name="classId" placeholder="شناسه کلاس را وارد کنید" required />

            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
            }

            <button type="submit">لغو تخصیص</button>
        </form>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function() {
            $('form').submit(function() {
                const classId = $('#classId').val().trim();

                if (classId === '') {
                    alert('لطفاً شناسه کلاس را وارد نمایید');
                    return false;
                }
                return true;
            });
        });
    </script>
</body>
</html>
