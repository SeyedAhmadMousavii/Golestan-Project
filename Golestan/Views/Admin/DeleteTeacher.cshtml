@model List<Golestan.Models.Instructors>

<table>
    <thead>
        <tr>
            <th>شماره استادی</th>
            <th>شناسه کاربر</th>
            <th>عملیات</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Instructor_Id</td>
                    <td>@user.User_Id</td>@* most be User.First_Name*@
                    <td>
                        <form asp-action="DeleteTeacher" asp-controller="Admin" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@user.Id" />
                            <button type="submit" onclick="return confirm('آیا مطمئن هستید؟')" style="background:none;border:none;color:red;text-decoration:underline;cursor:pointer;">
                                حذف
                            </button>
                        </form>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
