@{
    ViewData["Title"] = "حذف کاربر";
}

<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="utf-8" />
    <title>حذف کاربر</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <style>
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            font-family: 'Vazir', Tahoma, sans-serif;
            background: linear-gradient(to left, #3a6073, #16222a);
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            direction: rtl;
        }

        .delete-form {
            position: relative;
            background-color: #fff;
            padding: 2rem;
            border-radius: 15px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
            width: 90%;
            max-width: 450px;
            text-align: center;
        }

        .btn-back {
            position: absolute;
            top: 15px;
            left: 15px;
            background-color: #2980b9;
            color: white;
            padding: 0.6rem 1rem;
            border-radius: 10px;
            font-weight: bold;
            text-decoration: none;
            display: inline-block;
            margin-bottom: 0;
            transition: background-color 0.3s ease;
            font-size: 1rem;
            z-index: 10;
        }

            .btn-back:hover {
                background-color: #1c5980;
            }

        .delete-header {
            color: #e74c3c;
            margin-bottom: 1.5rem;
            font-size: 1.5rem;
        }

        .alert-danger {
            background-color: #fdecea;
            color: #e74c3c;
            padding: 1rem;
            border-radius: 10px;
            border-right: 4px solid #e74c3c;
            margin-bottom: 1.5rem;
            text-align: right;
        }

        .form-group {
            margin-bottom: 1.5rem;
            text-align: right;
        }

        label {
            display: block;
            margin-bottom: 0.5rem;
            font-weight: bold;
            color: #333;
        }

        input[type="number"] {
            width: 100%;
            padding: 0.75rem;
            border: 1px solid #ddd;
            border-radius: 10px;
            font-size: 1rem;
            transition: all 0.3s;
        }

            input[type="number"]:focus {
                border-color: #e74c3c;
                box-shadow: 0 0 0 3px rgba(231, 76, 60, 0.2);
                outline: none;
            }

        .btn-delete {
            background-color: #e74c3c;
            color: white;
            border: none;
            padding: 0.75rem 1.5rem;
            font-size: 1rem;
            border-radius: 10px;
            cursor: pointer;
            transition: all 0.3s;
            width: 100%;
            font-weight: bold;
        }

            .btn-delete:hover {
                background-color: #c0392b;
                transform: translateY(-2px);
            }

            .btn-delete:active {
                transform: translateY(0);
            }

        .fa-triangle-exclamation {
            margin-left: 5px;
        }

        .back-button {
            width: 100%;
            padding: 0.7rem;
            background-color: #2980b9;
            border: none;
            color: white;
            font-size: 1rem;
            border-radius: 10px;
            cursor: pointer;
            transition: background-color 0.3s ease;
            display: inline-block;
            text-align: center;
            text-decoration: none;
        }

        .top-left-button {
            position: absolute;
            top: 20px;
            left: 20px;
            width: auto;
            padding: 0.5rem 1rem;
            font-weight: bold;
        }

    </style>
</head>
<body>
    <a href="@Url.Action("Index", "Admin")" class="back-button top-left-button">← بازگشت</a>

    <div class="delete-form">
        

        <h2 class="delete-header">حذف کاربر</h2>

        <div class="alert-danger">
            <i class="fas fa-triangle-exclamation"></i>
            هشدار: با حذف کاربر، تمام اطلاعات مرتبط از جمله نمرات و حضور و غیاب نیز حذف خواهند شد!
        </div>

        <form method="post" action="/Admin/DeleteUser" id="deleteForm">
            <div class="form-group">
                <label for="id">شناسه کاربر:</label>
                <input type="number" id="id" name="id" placeholder="شناسه کاربر را وارد نمایید" required min="1" />
            </div>

            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
            }

            <button type="submit" class="btn-delete">حذف کاربر</button>
        </form>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function() {
            $('#deleteForm').submit(function(e) {
                const userId = $('#id').val().trim();
                if (!userId) {
                    alert('لطفاً شناسه کاربر را وارد نمایید');
                    return false;
                }
                return confirm(`آیا از حذف کاربر با شناسه ${userId} اطمینان دارید؟\nاین عمل غیرقابل بازگشت خواهد بود!`);
            });
        });
    </script>
</body>
</html>
