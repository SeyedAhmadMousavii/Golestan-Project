@{
    ViewData["Title"] = "حذف کلاس";
}

<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="utf-8" />
    <title>حذف کلاس</title>
    <style>
        * {
            box-sizing: border-box;
        }

        body {
            margin: 0;
            padding: 0;
            font-family: 'Vazir', Tahoma, sans-serif;
            background: linear-gradient(to left, #3a6073, #16222a);
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            direction: rtl;
        }

        .form-container {
            background-color: #fff;
            padding: 2.5rem;
            border-radius: 20px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
            width: 90%;
            max-width: 400px;
            text-align: center;
        }

            .form-container h2 {
                text-align: center;
                margin-bottom: 1.8rem;
                color: #e74c3c; /* رنگ قرمز برای هشدار */
            }

        label {
            display: block;
            margin-bottom: 0.4rem;
            color: #333;
            font-weight: bold;
            text-align: right;
        }

        input[type="number"] {
            width: 100%;
            padding: 0.6rem;
            margin-bottom: 1.5rem;
            border: 1px solid #ccc;
            border-radius: 10px;
            font-size: 1rem;
        }

        input:focus {
            outline: none;
            border-color: #e74c3c;
            box-shadow: 0 0 5px rgba(231, 76, 60, 0.5);
        }

        .warning-message {
            color: #e74c3c;
            font-size: 0.9rem;
            margin: 1rem 0;
            padding: 0.8rem;
            background-color: #fdecea;
            border-radius: 10px;
        }

        button {
            width: 100%;
            padding: 0.7rem;
            background-color: #e74c3c;
            border: none;
            color: white;
            font-size: 1rem;
            border-radius: 10px;
            cursor: pointer;
            transition: background-color 0.3s ease;
            font-weight: bold;
        }

            button:hover {
                background-color: #c0392b;
            }
    </style>
</head>
<body>
    <div class="form-container">
        <form method="post" action="/Admin/DeleteClass" onsubmit="return confirm('آیا از حذف این کلاس مطمئن هستید؟ این عمل غیرقابل بازگشت است!');">
            <h2>حذف کلاس</h2>

            <div class="warning-message">
                ❌ توجه: این عمل غیرقابل بازگشت است!
            </div>

            <label for="classId">شناسه کلاس:</label>
            <input type="number" id="classId" name="id" placeholder="شناسه کلاس را وارد کنید" required />

            <button type="submit">حذف کلاس</button>
        </form>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        // اعتبارسنجی اضافی برای حذف
        $(document).ready(function() {
            $('form').submit(function(e) {
                if ($('#classId').val() === '') {
                    alert('لطفاً شناسه کلاس را وارد نمایید');
                    return false;
                }
                return true;
            });
        });
    </script>
</body>
</html>