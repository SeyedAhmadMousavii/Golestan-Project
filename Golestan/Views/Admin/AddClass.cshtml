@{
    ViewBag.Title = "افزودن کلاس جدید";
}

<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="utf-8" />
    <title>افزودن کلاس جدید</title>
    <style>
        * {
            box-sizing: border-box;
        }

        body {
            margin: 0;
            padding: 0;
            font-family: 'Vazir', Tahoma, sans-serif;
            background: linear-gradient(to left, #3a6073, #16222a);
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            direction: rtl;
        }

        .form-container {
            background-color: #fff;
            padding: 2.5rem;
            border-radius: 20px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
            width: 90%;
            max-width: 400px;
            position: relative;
        }

        h2 {
            text-align: center;
            margin-bottom: 1.8rem;
            color: #2c3e50;
        }

        label {
            display: block;
            margin-bottom: 0.4rem;
            color: #333;
            font-weight: bold;
        }

        input[type="text"],
        input[type="number"],
        input[type="time"],
        select {
            width: 100%;
            padding: 0.6rem;
            margin-bottom: 1.2rem;
            border: 1px solid #ccc;
            border-radius: 10px;
            font-size: 1rem;
        }

            input:focus,
            select:focus {
                outline: none;
                border-color: #2980b9;
                box-shadow: 0 0 5px rgba(41, 128, 185, 0.5);
            }

        button,
        .back-button {
            width: 100%;
            padding: 0.7rem;
            background-color: #2980b9;
            border: none;
            color: white;
            font-size: 1rem;
            border-radius: 10px;
            cursor: pointer;
            transition: background-color 0.3s ease;
            display: inline-block;
            text-align: center;
            text-decoration: none;
        }

            button:hover,
            .back-button:hover {
                background-color: #1c5980;
            }

        .top-left-button {
            position: absolute;
            top: 20px;
            left: 20px;
            width: auto;
            padding: 0.5rem 1rem;
            font-weight: bold;
        }

        .alert {
            color: red;
            margin-bottom: 1rem;
            text-align: center;
        }
    </style>
</head>
<body>
    <a href="@Url.Action("Index", "Admin")" class="back-button top-left-button">← بازگشت</a>

    <div class="form-container">
        <form method="post" action="/Admin/AddClass">
            <h2>افزودن کلاس جدید</h2>

            <label>شناسه:</label>
            <input type="number" name="SID" required />

            <label>سال:</label>
            <input type="number" name="year" required />

            <label>ترم:</label>
            <input type="number" name="semester" required />

            <label>شناسه درس:</label>
            <input type="number" name="courseId" required />

            <label> زمان کلاس:</label>
            <select name="TimeId" id="TimeId" required>
                <option value="">-- انتخاب کنید --</option>
                <option value="1">شنبه 7:30-9</option>
                <option value="2">شنبه 9-10:30</option>
                <option value="3">شنبه 10:30-12</option>
                <option value="4">شنبه 14:30-16</option>
                <option value="5">شنبه 16-17:30</option>
                <option value="6">یکشنبه 7:30-9</option>
                <option value="7">یکشنبه 9-10:30</option>
                <option value="8">یکشنبه 10:30-12</option>
                <option value="9">یکشنبه 14:30-16</option>
                <option value="10">یکشنبه 16-17:30</option>
                <option value="11">دوشنبه 7:30-9</option>
                <option value="12">دوشنبه 9-10:30</option>
                <option value="13">دوشنبه 10:30-12</option>
                <option value="14">دوشنبه 14:30-16</option>
                <option value="15">دوشنبه 16-17:30</option>
                <option value="16">سه شنبه 7:30-9</option>
                <option value="17">سه شنبه 9-10:30</option>
                <option value="18">سه شنبه 10:30-12</option>
                <option value="19">سه شنبه 14:30-16</option>
                <option value="20">سه شنبه 16-17:30</option>
                <option value="21">چهارشنبه 7:30-9</option>
                <option value="22">چهارشنبه 9-10:30</option>
                <option value="23">چهارشنبه 10:30-12</option>
                <option value="24">چهارشنبه 14:30-16</option>
                <option value="25">چهارشنبه 16-17:30</option>
                <option value="26">پنجشنبه 7:30-9</option>
                <option value="27">پنجشنبه 9-10:30</option>
                <option value="28">پنجشنبه 10:30-12</option>
                <option value="29">پنجشنبه 14:30-16</option>
                <option value="30">پنجشنبه 16-17:30</option>
            </select>

            <label>ظرفیت کلاس:</label>
            <input type="number" name="capacity" min="1" required />

            <label>مکان کلاس:</label>
            <select name="classs" id="classs" required>
                <option value="">-- انتخاب کنید --</option>
                <option value="11">کلاس 11</option>
                <option value="22">کلاس 22</option>
                <option value="33">کلاس 33</option>
                <option value="44">کلاس 44</option>
                <option value="55">کلاس 55</option>
            </select>

            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert">@ViewBag.ErrorMessage</div>
            }

            <button type="submit">افزودن</button>
        </form>
    </div>
</body>
</html>
